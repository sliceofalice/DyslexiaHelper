{
    "manifest_version": 3,
    "name": "Dyslexia Helper",
    "description": "This extension helps people with dyslexia read better",
    "version": "1.0",
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["content.js"]
        }
    ]
  }